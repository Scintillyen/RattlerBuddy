<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RattlerBuddy.DisplayMessagePage">
    <ContentPage.Content>
                <StackLayout Margin="30,50,30,30">
        <Label x:Name="User" HorizontalOptions="Center"/>
            <ListView x:Name="messageListView" Margin="20,60,20,20" HasUnevenRows="true"
                       SeparatorVisibility="None"> 
                            <ListView.ItemTemplate>
                  <DataTemplate>
                    <TextCell Text="{Binding Message_Text}" Detail="{Binding Reciever_Name}" 
                              CommandParameter="{Binding Reciever_ID}"/>
                  </DataTemplate>
            </ListView.ItemTemplate>
                </ListView>
            <Entry x:Name="messageEntry" Margin="20" Placeholder="Write a message..." HeightRequest="50"/>
            <Button x:Name="sendButton" Text="Send" WidthRequest="100" HorizontalOptions="Center"/>
         </StackLayout>
    </ContentPage.Content>
</ContentPage>
