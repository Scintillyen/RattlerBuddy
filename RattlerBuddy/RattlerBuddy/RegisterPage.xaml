<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RattlerBuddy.RegisterPage">
    <ContentPage.Content>
     
        <StackLayout VerticalOptions="Center"
                 Margin="20,0,20,0">
            
         <Entry x:Name="nameEntry" Placeholder="Full Name" Margin="5,10"/>
        
         <Entry x:Name="emailEntry" Keyboard="Email" Placeholder="E-mail address"
                 Margin="5,10"/>
        
         <Entry x:Name="passwordEntry" IsPassword="true" 
               Placeholder="Password"  Margin="5,10"/>
            
            <Entry x:Name="confirmPasswordEntry" IsPassword="true" 
               Placeholder="Confirm Password"  Margin="5,10"/>
            
            <Button x:Name="registerButton" Text="Create Account" 
                Clicked="RegisterButton_Clicked"
                Style="{StaticResource greenButton}"
                Margin="30,50,30,0"></Button>
            
             <Button x:Name="loginButton" Text="Log In" 
                Clicked="LoginButton_Clicked"
                Margin="30,0" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
